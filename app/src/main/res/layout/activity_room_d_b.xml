<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomDBActivity">

    <EditText
        android:id="@+id/etInputTextRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:hint="Enter Customer Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddRoom_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="@+id/btnGetRoom_"
        app:layout_constraintStart_toStartOf="@+id/etInputTextRoom"
        app:layout_constraintTop_toBottomOf="@+id/etInputTextRoom" />

    <Button
        android:id="@+id/btnGetRoom_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Get"
        app:layout_constraintEnd_toEndOf="@+id/etInputTextRoom"
        app:layout_constraintTop_toBottomOf="@+id/etInputTextRoom" />

    <TextView
        android:id="@+id/etAllItemsRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddRoom_" />

    <EditText
        android:id="@+id/etCustomerID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Customer ID"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/etInputTextRoom"
        app:layout_constraintEnd_toEndOf="@+id/etInputTextRoom"
        app:layout_constraintStart_toStartOf="@+id/etInputTextRoom"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>